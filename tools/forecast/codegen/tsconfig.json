{
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../../dist/out-tsc",
    "module": "commonjs",
    "target": "es2022",
    "types": ["node", "handlebars/types"],
    "declaration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "exclude": ["**/*.spec.ts", "**/*.test.ts", "jest.config.ts"],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "bin/cli",
    "../../../../../prettier.config.js"
  ]
}
