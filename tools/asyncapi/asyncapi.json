  "tags": [
    {
      "name": "blog",
      "description": "The `blog` [level-1 domain type](https://medium.com/nick-tune-tech-strategy-blog/domains-subdomain-problem-solution-space-in-ddd-clearly-defined-e0b49c7b586c)."
    },
    {
      "name": "engagement",
      "description": "The `blog-engagement` [subdomain type](https://medium.com/nick-tune-tech-strategy-blog/domains-subdomain-problem-solution-space-in-ddd-clearly-defined-e0b49c7b586c)."
    },
    {
      "name": "reaction",
      "description": "User-provided reaction data/actions."
    },
    {
      "name": "comment",
      "description": "User-provided comment data."
    }
  ],
  "defaultContentType": "application/json",
  "servers": {
    "development": {
      "url": "http://localhost:5100/services/engagement",
      "description": "Local development server",
      "protocol": "amqp",
      "protocolVersion": "0.9.1"
    },
    "staging": {
      "url": "https://PatSullivan.tech/services/engagement",
      "description": "Staging environment",
      "protocol": "amqp",
      "protocolVersion": "0.9.1"
    },
    "production": {
      "url": "https://PatSullivan.dev/services/engagement",
      "description": "Cloud-based production environment",
      "protocol": "amqp",
      "protocolVersion": "0.9.1"
    }
  },
  "channels": {
    "os/blog/engagement/command/add-reaction": {
      "description": "A topic on which an add-reaction command may be produced and consumed.",
      "subscribe": {
        "operationId": "SendAddReactionCommand",
        "message": {
          "$ref": "#/components/messages/reaction"
        },
        "tags": [
          {
            "name": "reaction",
            "description": "User-provided reaction data/actions."
          }
        ]
      },
      "publish": {
        "operationId": "ReceiveAddReactionCommand",
        "message": {
          "$ref": "#/components/messages/reaction"
        },
        "bindings": {
          "amqp": {
            "timestamp": true,
            "ack": false,
            "bindingVersion": "0.2.0"
          }
        },
        "tags": [
          {
            "name": "reaction",
            "description": "User-provided reaction data/actions."
          }
        ]
      },
      "bindings": {
        "amqp": {
          "is": "routingKey",
          "exchange": {
            "name": "OpenSystem.Blog.Engagement",
            "type": "topic",
            "vhost": "/",
            "durable": true
          },
          "queue": { "name": "reaction" },
          "bindingVersion": "0.2.0"
        }
      }
    },
    "os/blog/engagement/event/add-reaction": {
      "description": "A topic on which an add-reaction event may be produced and consumed.",
