        }
      },
      "publish": {
        "operationId": "ReceiveAddReactionCommand",
        "message": {
          "$ref": "#/components/messages/reaction"
        },
        "bindings": {
          "amqp": {
            "timestamp": true,
            "ack": false,
            "bindingVersion": "0.2.0"
          }
        }
      },
      "bindings": {
        "amqp": {
          "is": "routingKey",
          "exchange": {
            "name": "OS.Engagement.Articles",
            "type": "topic",
            "vhost": "/",
            "durable": true
          },
          "queue": { "name": "reactions" },
