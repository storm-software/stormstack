{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist/out-tsc/tools",
    "rootDir": ".",
    "allowJs": true,
    "module": "commonjs",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "importHelpers": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
