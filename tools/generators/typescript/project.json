{
  "name": "tools-generators-typescript",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/generators/typescript",
  "projectType": "library",
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "tools/generators/typescript/**/*.ts",
          "tools/generators/typescript/generators.json",
          "tools/generators/typescript/package.json"
        ]
      },
      "outputs": ["{options.outputFile}"]
    },

    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/tools/generators/typescript",
        "tsConfig": "tools/generators/typescript/tsconfig.json",
        "project": "tools/generators/typescript/package.json",
        "main": "tools/generators/typescript/index.ts",
        "rollupConfig": "tools/generators/typescript/rollup.config.js",
        "external": "all",
        "deleteOutputPath": false,
        "assets": [
          {
            "input": "./tools/generators/typescript",
            "glob": "**/*.md",
            "output": "."
          },
          {
            "input": "./tools/generators/typescript",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "",
            "glob": "CHANGELOG.md",
            "output": "/"
          },
          {
            "input": "",
            "glob": "LICENSE",
            "output": "/"
          },
          {
            "input": "./tools/generators/typescript",
            "glob": "migrations.json",
            "output": "."
          }
        ]
      },
      "configurations": {
        "client-api": {
          "outputPath": "dist/tools/generators/typescript/client-api",
          "main": "tools/generators/typescript/client-api/impl.ts",
          "deleteOutputPath": true,
          "assets": [
            {
              "input": "tools/generators/typescript/client-api",
              "glob": "schema.json",
              "output": "."
            }
          ]
        },
        "cloudflare-worker": {
          "outputPath": "dist/tools/generators/typescript/cloudflare-worker",
          "main": "tools/generators/typescript/cloudflare-worker/impl.ts",
          "deleteOutputPath": true,
          "assets": [
            {
              "input": "tools/generators/typescript/cloudflare-worker",
              "glob": "schema.json",
              "output": "."
            },
            {
              "input": "tools/generators/typescript/cloudflare-worker/files",
              "glob": "**/*",
              "output": "./files"
            }
          ]
        }
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "github": true,
        "npm": false,
        "changelog": true,
        "tagFormat": "tools-generators-typescript-v${VERSION}"
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["core-utilities"]
}
