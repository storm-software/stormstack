
using Microsoft.AspNetCore.Builder;

namespace OpenSystem.Apis.{{domainName}}.Extensions
{
    public static class AppExtensions
    {
        public static void UseSwaggerExtension(this IApplicationBuilder app)
        {
            app.UseSwagger();
            app.UseSwaggerUI(c =>
            {
                c.SwaggerEndpoint("/swagger/v{{{version}}}{{^version}}1{{/version}}/swagger.json",
                  "{{apiPackage}}");
            });
        }
    }
}
