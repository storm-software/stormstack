{
  "name": "tools-storm-runtime",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "tools/storm/runtime/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/tools/storm/runtime",
        "main": "tools/storm/runtime/src/index.ts",
        "project": "tools/storm/runtime/package.json",
        "tsConfig": "tools/storm/runtime/tsconfig.json",
        "platform": "node",
        "deleteOutputPath": true,
        "bundle": true,
        "sourcemap": false,
        "minify": true,
        "skipTypeCheck": true,
        "format": ["esm", "cjs"],
        "external": [".prisma/client/index"],
        "assets": [
          {
            "input": "tools/storm/runtime",
            "glob": "README.md",
            "output": "."
          },
          {
            "input": ".",
            "glob": "LICENSE",
            "output": "."
          }
        ]
      }
    },
    "pack": {
      "executor": "nx:run-commands",
      "options": {
        "commands": ["pnpm pack dist --pack-destination \"../.build\""],
        "cwd": "dist/tools/storm/runtime"
      }
    },
    "publish-dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "pnpm nx run tools-storm-runtime:build && pnpm publish --tag dev"
        ],
        "cwd": "dist/tools/storm/runtime"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "tools/storm/runtime/**/*.ts",
          "tools/storm/runtime/generators.json",
          "tools/storm/runtime/package.json"
        ]
      },
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "tools/storm/runtime/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "github": true,
        "npm": false,
        "changelog": true,
        "tagFormat": "tools-storm-runtime-v${VERSION}"
      }
    }
  },
  "tags": ["scope:tools", "platform:server"],
  "implicitDependencies": ["tools-storm-language", "core-shared-utilities"]
}
