{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es2017",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@open-system/core-typescript-utilities": [
        "libs/core/typescript/utilities/src/index.ts"
      ],
      "@open-system/design-system-components": [
        "design-system/components/src/index.ts"
      ],
      "@open-system/design-system-tokens": ["dist/design-system/tokens"],
      "@open-system/design-system-tokens/*": ["dist/design-system/tokens/*"],
      "@open-system/engagement-ui-feat-like": [
        "libs/engagement/ui/feat-like/src/index.ts"
      ],
      "@open-system/engagement-ui-feat-like/*": [
        "libs/engagement/ui/feat-like/src/*"
      ],
      "@open-system/executors-docs": ["tools/executors/docs/index.ts"],
      "@open-system/executors-dotnet": ["tools/executors/dotnet/index.ts"],
      "@open-system/executors-typescript": [
        "tools/executors/typescript/index.ts"
      ],
      "@open-system/generators-dotnet": ["tools/generators/dotnet/index.ts"],
      "@open-system/generators-typescript": [
        "tools/generators/typescript/index.ts"
      ],
      "@open-system/shared-common": ["libs/shared/common/src/index.ts"],
      "@open-system/shared-ui-components": [
        "libs/shared/ui/components/src/index.ts"
      ],
      "@open-system/shared-ui-components/*": [
        "libs/shared/ui/components/src/*"
      ],
      "@open-system/shared-ui-feat-layout": [
        "libs/shared/ui/feat-layout/src/index.ts"
      ],
      "@open-system/shared-ui-feat-layout/*": [
        "libs/shared/ui/feat-layout/src/*"
      ],
      "@open-system/shared-ui-feat-notifications": [
        "libs/shared/ui/feat-notifications/src/index.ts"
      ],
      "@open-system/shared-ui-feat-notifications/*": [
        "libs/shared/ui/feat-notifications/src/*"
      ],
      "@open-system/static-message-common": [
        "libs/static/message/common/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"],
  "references": [
    {
      "path": "./.storybook/tsconfig.json"
    }
  ]
}
