{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "main"
  },
  "workspaceLayout": {
    "projectNameAndRootFormat": "as-provided"
  },
  "tasksRunnerOptions": {
    "cloud": {
      "runner": "nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "format",
          "test",
          "e2e",
          "build-storybook"
        ],
        "accessToken": "YzE2MTRhZTItYjEzMS00OGE3LWE4ZTMtNWYzNjc4ZGY0NzA2fHJlYWQtb25seQ==",
        "cacheDirectory": "node_modules/.cache/nx",
        "parallel": 1,
        "useLightClient": true
      }
    },
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "lint",
          "format",
          "test",
          "e2e",
          "build-storybook",
          "build-custom-server"
        ],
        "parallel": 5,
        "cacheDirectory": "node_modules/.cache/nx"
      }
    }
  },
  "release": {
    "groups": {
      "npm": {
        "projects": [
          "tools/devops/*",
          "tools/executors/*",
          "tools/generators/*",
          "tools/nx/*",
          "tools/forecast/*",
          "design-system/*",
          "libs/core/*",
          "libs/common/*",
          "libs/contact/*",
          "libs/engagement/*",
          "libs/user-management/*",
          "apps/web/*",
          "apps/workers/*"
        ],
        "version": {
          "generatorOptions": {
            "packageRoot": "dist/{projectRoot}",
            "currentVersionResolver": "registry"
          }
        }
      }
    }
  },
  "targetDependencies": {
    "nx-release-publish": {
      "options": {
        "packageRoot": "dist/{projectRoot}"
      }
    },
    "build": [
      {
        "target": "build",
        "projects": "dependencies"
      }
    ],
    "bundle": [
      {
        "target": "package",
        "projects": "self"
      }
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "test": {
      "inputs": [
        "default",
        "^production",
        "{workspaceRoot}/testing/jest.preset.js"
      ]
    },
    "e2e": {
      "inputs": ["default", "^production"]
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"]
    },
    "build-storybook": {
      "inputs": [
        "default",
        "^production",
        "!{projectRoot}/.storybook/**/*",
        "{projectRoot}/.storybook/**/*",
        "{projectRoot}/tsconfig.storybook.json"
      ]
    }
  },
  "namedInputs": {
    "globalBuildAffectingConfig": [
      "{workspaceRoot}/babel.config.js",
      "{workspaceRoot}/tailwind.config.js",
      "{workspaceRoot}/tsconfig.base.json",
      "{workspaceRoot}/graphql-codegen.ts",
      "{workspaceRoot}/package.json"
    ],
    "globalNonBuildAffectingConfig": [
      "{workspaceRoot}/.log4brains.yml",
      "{workspaceRoot}/nxrelease.config.js",
      "{workspaceRoot}/.eslintrc.json",
      "{workspaceRoot}/jest.config.ts",
      "{workspaceRoot}/testing/jest-preset.js"
    ],
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/.storybook/**/*",
      "!{projectRoot}/**/*.stories.@(js|jsx|ts|tsx|mdx)",
      "!{projectRoot}/tsconfig.storybook.json",
      "!{workspaceRoot}/testing/jest-setup.[jt]s",
      "!{projectRoot}/src/test-setup.[jt]s",
      "!{projectRoot}/test-setup.[jt]s"
    ],
    "sharedGlobals": ["{workspaceRoot}/babel.config.json"]
  },
  "generators": {
    "@nx/react": {
      "application": {
        "style": "css",
        "linter": "eslint",
        "bundler": "webpack",
        "unitTestRunner": "jest",
        "babel": true
      },
      "component": {
        "style": "css"
      },
      "library": {
        "style": "css",
        "linter": "eslint",
        "unitTestRunner": "jest"
      }
    },
    "@nx/next": {
      "application": {
        "style": "css",
        "linter": "eslint",
        "bundler": "swc",
        "unitTestRunner": "jest"
      },
      "component": {
        "style": "css"
      },
      "library": {
        "style": "css",
        "linter": "eslint",
        "bundler": "swc",
        "unitTestRunner": "jest"
      }
    }
  },
  "defaultProject": "web-shell",
  "plugins": ["@nx/next"]
}
