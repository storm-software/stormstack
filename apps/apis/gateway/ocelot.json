{
  "GlobalConfiguration": {
    "RequestIdKey": "x-correlation-id",
    "UseServiceDiscovery": true,
    "DownstreamScheme": "http"
  },

  "RateLimitOptions": {
    "ClientWhitelist": [],
    "EnableRateLimiting": true,
    "Period": "1s",
    "HttpStatusCode": 428,
    "QuotaExceededMessage": "Too many requests are currently being processed",
    "PeriodTimespan": 1,
    "Limit": 1
  },

  "HttpHandlerOptions": {
    "UseTracing": true
  },

  "LoadBalancerOptions": {
    "Type": "LeastConnection",
    "Key": null,
    "Expiry": 0
  },

  "QoSOptions": {
    "ExceptionsAllowedBeforeBreaking": 3,
    "DurationOfBreak": 10000,
    "TimeoutValue": 5000
  },

  "SwaggerEndPoints": [
    {
      "Key": "user",
      "Config": [
        {
          "Name": "User API",
          "Version": "v1",
          "Url": "http://user-api.service/swagger/v1/swagger.json"
        }
      ]
    }
  ],

  "Routes": [
    {
      "UpstreamPathTemplate": "/api/users/{id}",
      "UpstreamHttpMethod": ["Get", "Post", "Put", "Delete"],
      "DownstreamPathTemplate": "/api/v1/users/{id}",
      "DownstreamScheme": "http",
      "ServiceName": "user-api.service",
      "RouteIsCaseSensitive": false,
      "FileCacheOptions": { "TtlSeconds": 15 },
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "SwaggerKey": "user"
    },
    {
      "UpstreamPathTemplate": "/api/users",
      "UpstreamHttpMethod": ["Get"],
      "DownstreamPathTemplate": "/api/v1/users",
      "DownstreamScheme": "http",
      "ServiceName": "user-api.service",
      "FileCacheOptions": { "TtlSeconds": 15 },
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "SwaggerKey": "user"
    }
  ]
}
