{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "apis-reaction",
  "projectType": "application",
  "sourceRoot": "apps/apis/reaction",
  "targets": {
    "build": {
      "executor": "@open-system/executors-dotnet:build",
      "output": ["dist/apps/apis/reaction"],
      "options": {
        "configuration": "Debug",
        "noDependencies": false
      },
      "configurations": {
        "production": {
          "configuration": "Release"
        },
        "docker": {
          "configuration": "Debug",
          "noDependencies": false,
          "configFile": "../../../NuGet.Config"
        }
      }
    },
    "build-base": {
      "executor": "@nx-dotnet/core:build",
      "output": ["dist/apps/apis/reaction"],
      "options": {
        "configuration": "Debug",
        "noDependencies": false
      },
      "configurations": {
        "production": {
          "configuration": "Release"
        },
        "docker": {
          "configuration": "Debug"
        }
      }
    },
    "publish": {
      "executor": "@nx-dotnet/core:publish",
      "selfContained": true,
      "outputs": ["dist/apps/apis/reaction/publish"],
      "options": {
        "configuration": "Debug",
        "noDependencies": true
      },
      "configurations": {
        "production": {
          "configuration": "Release"
        },
        "docker": {
          "configuration": "Debug",
          "outputs": "/app/publish"
        }
      }
    },
    "serve": {
      "executor": "@nx-dotnet/core:serve",
      "options": {
        "configuration": "Debug"
      },
      "configurations": {
        "debug": {
          "configuration": "Debug"
        },
        "production": {
          "configuration": "Release"
        }
      }
    },
    "lint": {
      "executor": "@nx-dotnet/core:format"
    },
    "server-api-sync": {
      "executor": "@open-system/executors-dotnet:server-api-sync",
      "options": {
        "domainName": "engagement",
        "serviceName": "reaction",
        "specJsonFile": "libs/engagement/config/src/engagement-reaction.api-spec.json",
        "packageName": "OpenSystem.Apis.Reaction"
      }
    },
    "docker": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "file": "./Dockerfile",
        "load": true,
        "tags": ["apis-reaction:latest"]
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "github": true,
        "npm": false,
        "changelog": true,
        "tagFormat": "apis-reaction-v${VERSION}"
      }
    }
  },
  "tags": ["domain:engagement", "type:apps", "target:apis"]
}
