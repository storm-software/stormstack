{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "name": "web-landing",
  "projectType": "application",
  "sourceRoot": "apps/web/landing",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/web/landing"],
      "defaultConfiguration": "development",
      "options": {
        "parallel": true
      },
      "configurations": {
        "development": {
          "commands": [
            "nx run web-landing:build-base:development",
            "cd apps/web/landing/ClientApp && npm run build"
          ]
        },
        "production": {
          "commands": [
            "nx run web-landing:build-base:production",
            "cd apps/web/landing/ClientApp && npm run build"
          ]
        }
      }
    },
    "build-base": {
      "executor": "@nx-dotnet/core:build",
      "outputs": ["{workspaceRoot}/dist/apps/web/landing"],
      "defaultConfiguration": "development",
      "options": {
        "configuration": "Debug",
        "noDependencies": true
      },
      "configurations": {
        "development": {
          "configuration": "Debug",
          "noDependencies": true
        },
        "production": {
          "configuration": "Release"
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "defaultConfiguration": "development",
      "options": {
        "parallel": true
      },
      "configurations": {
        "development": {
          "commands": [
            "nx run web-landing:serve-base:development",
            "cd apps/web/landing/ClientApp && npm run dev"
          ]
        },
        "production": {
          "commands": [
            "nx run web-landing:serve-base:production",
            "cd apps/web/landing/ClientApp && npm run dev"
          ]
        }
      }
    },
    "serve-base": {
      "executor": "@nx-dotnet/core:serve",
      "options": {
        "configuration": "Debug",
        "defaultConfiguration": "development"
      },
      "configurations": {
        "development": {
          "configuration": "Debug"
        },
        "production": {
          "configuration": "Release"
        }
      }
    },
    "publish": {
      "executor": "@nx-dotnet/core:publish",
      "selfContained": true,
      "outputs": ["dist/apps/web/landing/publish"],
      "options": {
        "configuration": "Debug",
        "noDependencies": true
      },
      "configurations": {
        "production": {
          "configuration": "Release"
        },
        "docker": {
          "configuration": "Debug",
          "outputs": "/app/publish"
        }
      }
    },
    "lint": {
      "executor": "@nx-dotnet/core:format"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/web/landing/ClientApp/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "github": true,
        "npm": false,
        "changelog": true,
        "tagFormat": "web-landing-v${VERSION}"
      }
    }
  },
  "tags": ["domain:shared", "type:apps", "target:web"]
}

