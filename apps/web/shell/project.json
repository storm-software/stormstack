{
  "name": "web-shell",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web/shell",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "defaultConfiguration": "production",
      "options": {
        "root": "apps/web/shell",
        "outputPath": "dist/apps/web/shell",
        "verbose": true
      },
      "configurations": {
        "development": {
          "outputPath": "apps/web/shell"
        },
        "production": {}
      },
      "dependsOn": [
        "build-custom-server"
      ]
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "web-shell:build",
        "dev": true,
        "customServerTarget": "web-shell:serve-custom-server"
      },
      "configurations": {
        "development": {
          "buildTarget": "web-shell:build:development",
          "port": 3000,
          "customServerTarget": "web-shell:serve-custom-server:development"
        },
        "production": {
          "buildTarget": "web-shell:build:production",
          "dev": false,
          "customServerTarget": "web-shell:serve-custom-server:production"
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "web-shell:build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/web/shell/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/web/shell/**/*.{ts,tsx,js,jsx}"
        ]
      }
    },
    "semantic-release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "github": true,
        "npm": false,
        "changelog": true,
        "tagFormat": "web-shell-v${VERSION}"
      }
    },
    "build-custom-server": {
      "executor": "@nrwl/js:tsc",
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/web/shell",
        "main": "apps/web/shell/server/main.ts",
        "tsConfig": "apps/web/shell/tsconfig.server.json",
        "clean": false,
        "assets": []
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve-custom-server": {
      "executor": "@nrwl/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "web-shell:build-custom-server"
      },
      "configurations": {
        "development": {
          "buildTarget": "web-shell:build-custom-server:development"
        },
        "production": {
          "buildTarget": "web-shell:build-custom-server:production"
        }
      }
    }
  },
  "tags": []
}
