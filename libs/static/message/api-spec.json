  "paths": {
    "/": {
      "parameters": [],
      "get": {
        "summary": "Get Message List",
        "operationId": "get-message-list",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "allOf": [
                      {
                        "type": "object",
                        "properties": {
                          "guid": {
                            "$ref": "../../shared/api-spec.json#/components/schemas/Guid"
                          }
                        },
                        "required": [
                          "guid"
                        ]
                      },
                      {
                        "$ref": "#/components/schemas/Message"
                      }
                    ]
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          },
          "503": {
            "description": "Service Unavailable"
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "string",
              "default": "FXL",
              "enum": [
                "FXL",
                "24  TRADING",
                "24 CORE",
                "24 GENERAL",
                "APPLICATION",
                "CLIENT",
                "TRADINGVALIDATION",
                "INTERNALVALIDATION"
              ],
              "example": "FXL"
            },
            "in": "query",
            "name": "messageType",
            "description": "The type of message to return",
            "required": true
          },
          {
            "schema": {
              "type": "integer",
              "minimum": 0,
              "maximum": 999999999
            },
            "in": "query",
            "name": "messageNumber",
            "description": "A specific message number to return"
          },
          {
            "$ref": "../../shared/api-spec.json#/components/parameters/userId"
          }
        ],
        "description": "An end point that returns the system's message literals to a client",
        "tags": [
          "Message"
        ]
      },
