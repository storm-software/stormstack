        "description": "Add new message record",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Message"
              },
              "examples": {
                "Example": {
                  "value": {
                    "message": "This message is displayed in the application",
                    "messageType": "FXL",
                    "messageNumber": 338296833,
                    "culture": "EN-US"
