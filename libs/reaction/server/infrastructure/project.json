{
  "name": "reaction-server-infrastructure",
  "$schema": "../../../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/reaction/server/infrastructure",
  "targets": {
    "build": {
      "executor": "@nx-dotnet/core:build",
      "outputs": ["{workspaceRoot}/dist/libs/reaction/server/infrastructure"],
      "options": {
        "configuration": "Debug",
        "noDependencies": true
      },
      "configurations": {
        "production": {
          "configuration": "Release"
        }
      }
    },
    "lint": {
      "executor": "@nx-dotnet/core:format"
    },
    "create-migration": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rimraf libs/reaction/server/infrastructure/Persistence/Migrations",
          "dotnet ef migrations add \"Initial\" --project libs/reaction/server/infrastructure  --output-dir Persistence/Migrations"
        ]
      }
    },
    "update-database": {
      "executor": "nx:run-commands",
      "options": {
        "command": "dotnet ef database update --project libs/reaction/server/infrastructure"
      }
    }
  },
  "tags": []
}
